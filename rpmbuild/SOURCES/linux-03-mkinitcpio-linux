# mkinitcpio preset file for the '%{version}' package

ALL_config="/etc/mkinitcpio.conf"
ALL_kver="/boot/vmlinuz-%{version}"

PRESETS=('default' 'fallback' 'huge')

#default_config="/etc/mkinitcpio.conf"
default_image="/boot/initramfs-%{version}.img"
#default_options=""

#fallback_config="/etc/mkinitcpio.conf"
fallback_image="/boot/initramfs-%{version}-fallback.img"
fallback_options="-S autodetect"

#huge_config="/etc/mkinitcpio.conf"
huge_image="/boot/initramfs-%{version}-huge.img"
huge_options="-S autodetect -A allmods"
